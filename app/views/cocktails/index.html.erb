<div class="container">

  <h1 class="text-center">Cocktails</h1>

  <div class="cards">

    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path photo_helper(cocktail), height: 300, width: 400, crop: :fill %>')">

          <%= cocktail.name %>

        </div>
      <% end %>
    <% end %>

  </div>

</div>
<br>

